{
  "agent": {
    "name": "PairAgent",
    "description": "Autonomous pair-trading analysis agent",
    "version": "1.0.0"
  },
  "pairs": [],
  "analysis": {
    "lookbackPeriod": 200,
    "updateInterval": 3600000,
    "exitCheckInterval": 300000,
    "maxScansPerCycle": 50,
    "scanDelayMs": 3000,
    "zScoreThreshold": 1.5,
    "correlationThreshold": 0.80,
    "randomPairCount": 8,
    "halfLifePeriods": 50,
    "volatilityWindow": 20,
    "dynamicZScore": true,
    "halfLifeEnforced": true,
    "allowInfinityWithAdfBelow": 0.20,
    "stopOnFirstSignal": false,
    "predefinedFallbackPairs": [
      "BTC-PERP/ETH-PERP",
      "SOL-PERP/AVAX-PERP",
      "ARB-PERP/OP-PERP",
      "SOL-PERP/JTO-PERP",
      "SOL-PERP/WIF-PERP",
      "RENDER-PERP/TAO-PERP",
      "LINK-PERP/PYTH-PERP",
      "ETH-PERP/BNB-PERP",
      "ADA-PERP/AVAX-PERP",
      "XRP-PERP/LTC-PERP"
    ]
  },
  "exitConditions": {
    "meanReversionThreshold": 0.8,
    "stopLossPct": -2.5,
    "takeProfitPct": 5,
    "maxHoldingPeriodDays": 3,
    "trailingStopPct": 1.5,
    "partialExitPct": 0.5,
    "partialExitZScore": 0.5
  },
  "riskManagement": {
    "maxConcurrentTrades": 8,
    "maxCorrelatedTrades": 3,
    "maxPortfolioRisk": 12,
    "minCashReserve": 0.25,
    "defaultLeverage": 1.5,
    "maxLeverage": 2,
    "positionSizing": "kelly",
    "kellyFraction": 0.20,
    "volatilityAdjustment": true,
    "maxDrawdownPerTrade": 1.5,
    "minSharpeRatio": -10
  },
  "filters": {
    "minDailyVolume": 1000000,
    "maxSpreadPct": 0.1,
    "minPrice": 0.01,
    "maxVolatility": 100,
    "minLiquidity": 100000
  },
  "timing": {
    "bestExecutionHours": [
      2,
      8,
      14,
      20
    ],
    "avoidHighVolatility": true,
    "checkMarketRegime": true
  },
  "apis": {
    "drift": {
      "baseUrl": "https://dlob.drift.trade",
      "interval": "1h"
    }
  },
  "llm": {
    "provider": "eliza",
    "temperature": 0.7,
    "maxTokens": 150
  }
}