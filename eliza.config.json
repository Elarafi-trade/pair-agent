{
  "agent": {
    "name": "PairAgent",
    "description": "Autonomous pair-trading analysis agent",
    "version": "1.0.0"
  },
  "pairs": [],
  "analysis": {
    "lookbackPeriod": 200,
    "updateInterval": 3600000,
    "exitCheckInterval": 300000,
    "maxScansPerCycle": 50,
    "scanDelayMs": 5000,
    "zScoreThreshold": 1.8,
    "correlationThreshold": 0.8,
    "randomPairCount": 5,
    "minCointegrationPValue": 1.0,
    "halfLifePeriods": 100,
    "volatilityWindow": 20,
    "dynamicZScore": true,
    "predefinedFallbackPairs": [
      "BTC-PERP/ETH-PERP",
      "SOL-PERP/AVAX-PERP",
      "ARB-PERP/OP-PERP",
      "DOGE-PERP/SHIB-PERP",
      "UNI-PERP/AAVE-PERP",
      "LINK-PERP/GRT-PERP",
      "RNDR-PERP/TAO-PERP"
    ]
  },
  "exitConditions": {
    "meanReversionThreshold": 1.0,
    "stopLossPct": -3,
    "takeProfitPct": 6,
    "maxHoldingPeriodDays": 2,
    "trailingStopPct": 2,
    "partialExitPct": 0.5,
    "partialExitZScore": 0.5
  },
  "riskManagement": {
    "maxConcurrentTrades": 5,
    "maxCorrelatedTrades": 2,
    "maxPortfolioRisk": 10,
    "minCashReserve": 0.30,
    "defaultLeverage": 1.5,
    "maxLeverage": 2,
    "positionSizing": "kelly",
    "kellyFraction": 0.25,
    "volatilityAdjustment": true,
    "maxDrawdownPerTrade": 1.5,
    "minSharpeRatio": 0.5
  },
  "filters": {
    "minDailyVolume": 1000000,
    "maxSpreadPct": 0.1,
    "minPrice": 0.01,
    "maxVolatility": 100,
    "minLiquidity": 100000
  },
  "timing": {
    "bestExecutionHours": [2, 8, 14, 20],
    "avoidHighVolatility": true,
    "checkMarketRegime": true
  },
  "apis": {
    "drift": {
      "baseUrl": "https://dlob.drift.trade",
      "interval": "1h"
    }
  },
  "llm": {
    "provider": "eliza",
    "temperature": 0.7,
    "maxTokens": 150
  }
}
